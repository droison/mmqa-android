<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_qb_answer_best_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:paddingBottom="8.0dip"
        android:paddingLeft="8.0dip" >

        <ImageView
            android:id="@+id/imageview_qb_answer_best_recommend_wonderful_answer_icon"
            android:layout_width="23.65dip"
            android:layout_height="32dip"
            android:paddingRight="6.0dip" />

        <TextView
            android:id="@+id/textview_qb_best_recommend_wonderful_answer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/imageview_qb_answer_best_recommend_wonderful_answer_icon"
            android:textColor="#ff545454"
            android:textIsSelectable="false"
            android:textSize="20.0sp" />
    </RelativeLayout>

    <com.media.Adapter.MyLinearLayoutForListAdapter
        android:id="@+id/layout_qb_best_recommend_wonderful_answer_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</LinearLayout>